<mythuitheme>

    <window name="mainmenu">

        <shape name="titlebox">
            <area>-15,-15,1950,195</area>
            <type>box</type>
            <fill color="#000000" alpha="150" />
        </shape>

        <shape name="infobox">
            <area>-15,898,1950,225</area>
            <type>box</type>
            <fill color="#000000" alpha="150" />
        </shape>

        <fontdef name="menufont" from="baseextralarge">
            <color>#FFFFFF</color>
            <size>28</size>
        </fontdef>

        <fontdef name="selectedmenufont" from="menufont">
            <color>#FFFFFF</color>
            <size>36</size>
        </fontdef>

        <buttonlist name="menu">
            <area>60,142,1110,870</area>
            <layout>vertical</layout>
            <spacing>20</spacing>
            <wrapstyle>items</wrapstyle>
            <buttonarea>60,82,1095,690</buttonarea>
            <triggerevent context="Global" action="SELECT">RIGHT</triggerevent>
            <triggerevent context="Global" action="ESCAPE">LEFT</triggerevent>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,1050,90</area>
                    <shape name="slctbr">
                        <area>0,0,1020,90</area>
                        <type>roundbox</type> 
                        <fill color="#666666" alpha="50" />
                        <cornerradius>45</cornerradius> 
                    </shape>
                    <textarea name="buttontext">
                        <area>45,0,930,90</area>
                        <font>menufont</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <shape name="slctbr">
                        <area>0,0,1020,90</area>
                        <type>roundbox</type> 
                        <fill color="#FFFFFF" alpha="50" />
                        <cornerradius>60</cornerradius> 
                    </shape>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>-15,60</position>
                <showempty>yes</showempty>
                <state type="full">
                    <imagetype name="upon">
                        <filename>shared/uparrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>-15,697</position>
                <showempty>yes</showempty>
                <state type="full">
                    <imagetype name="dnon">
                        <filename>shared/downarrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <imagetype name="overlay">
            <area>0,0,1920,1080</area>
            <filename>panels-with-drop.png</filename>
        </imagetype>

        <clock name="clock">
            <area>150,963,1680,90</area>
            <font>clock</font>
            <align>right</align>
            <template>%DATE%, %TIME%</template>
        </clock>

    </window>
</mythuitheme>

