<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>
    <window name="appearance">

        <imagetype name="backimg">
            <filename>background.png</filename>
        </imagetype>

        <fontdef name="title" from="basesmall">
            <color>#ffffff</color>
            <size>18</size>
        </fontdef>

        <textarea name="part">
            <font>title</font>
            <area>30,30,1200,60</area>
            <value>Appearance Wizard</value>
            <align>center</align>
        </textarea>

        <imagetype name="topleft">
            <position>0,0</position>
            <filename>topleft.png</filename>
        </imagetype>

        <imagetype name="bottomright">
            <filename>bottomright.png</filename>
            <position>1200,900</position>
        </imagetype>

        <textarea name="part1">
            <font>title</font>
            <area>150,210,900,255</area>
            <value>Move the selected arrow to the corner of the TV screen.  Press SELECT to edit the other arrow.  Press MENU for options and ESC to quit.</value>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="size">
            <font>title</font>
            <area>150,405,750,75</area>
        </textarea>

        <textarea name="offsets">
            <font>title</font>
            <area>150,480,750,210</area>
        </textarea>

        <textarea name="changeamount">
            <font>title</font>
            <area>150,780,750,210</area>
        </textarea>

    </window>
</mythuitheme>
