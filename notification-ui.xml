<mythuitheme>
    <window name="notification">
        <area>700,10,550,175</area>
        
        <animation trigger="AboutToShow">
            <section duration="250" centre="top">
                <verticalzoom start="0" end="100" easingcurve="OutQuad" />
            </section>
        </animation>
        
        <animation trigger="AboutToHide">
            <section duration="250" centre="top">
                <verticalzoom start="100" end="0" easingcurve="InQuad" />
            </section>
        </animation>

        <shape name="groupbox">
            <area>0,0,550,175</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#FFFFFF" alpha="0" width="0" />
            <cornerradius>10</cornerradius>
        </shape>
        
        <group>
            
        </group>
        
        <textarea name="title" from="basetextarea">
            <area>10,10,530,25</area>
            <font>baselarge</font>
        </textarea>

        <textarea name="extra" from="basetextarea">
            <area>15,40,525,25</area>
            <template>%EXTRA| %%ORIGIN%</template>
        </textarea>

        <textarea name="origin" from="basetextarea" depends="!extra">
            <area>15,40,525,25</area>
        </textarea>

        <textarea name="description-progress" from="basetextarea" depends="progress_text">
            <area>15,70,525,25</area>
            <align>top</align>
            <template>%DESCRIPTION%</template>
        </textarea>
     
        <textarea name="description-noprogress" from="basetextarea" depends="!progress_text">
            <area>15,70,525,100</area>
            <multiline>yes</multiline>
            <align>top</align>
            <template>%DESCRIPTION%</template>
        </textarea> 
         
        <progressbar name="progress" from="baseprogressbar" depends="progress_text">
            <area>5,125,200,10</area>
        </progressbar>
        
        <textarea name="progress_text" from="baseprogresstext">
            <area>5,125,200,10</area>
            <template>%PROGRESS_TEXT% %PROGRESS%</template>
        </textarea>
        
    </window>
   
    <window name="notification-image" from="notification">
        <area>700,10,550,175</area>
        <animation trigger="AboutToShow">
            <section duration="250" centre="top">
                <verticalzoom start="0" end="100" easingcurve="OutQuad" />
            </section>
        </animation>
         
        <animation trigger="AboutToHide">
            <section duration="250" centre="top">
                <verticalzoom start="100" end="0" easingcurve="InQuad" />
            </section>
        </animation>

        <shape name="groupbox">
            <area>0,0,550,175</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#FFFFFF" alpha="0" width="0" />
            <cornerradius>10</cornerradius>
        </shape>
        
        <imagetype name="image">
            <area>5,5,100,165</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>

        <textarea name="title" from="basetextarea">
            <area>110,10,430,25</area>
            <font>baselarge</font>
        </textarea>

        <textarea name="extra" from="basetextarea">
            <area>110,40,430,25</area>
            <template>%EXTRA| %%ORIGIN%</template>
        </textarea>
     
        <textarea name="origin" from="basetextarea" depends="!extra">
            <area>110,40,430,25</area>
        </textarea>
        
        <textarea name="description-progress" from="basetextarea" depends="progress_text">
            <area>110,70,430,25</area>
            <align>top</align>
            <template>%DESCRIPTION%</template>
        </textarea>
     
        <textarea name="description-noprogress" from="basetextarea" depends="!progress_text">
            <area>110,70,430,100</area>
            <multiline>yes</multiline>
            <align>top</align>
            <template>%DESCRIPTION%</template>
        </textarea> 
         
        <progressbar name="progress" from="baseprogressbar" depends="progress_text">
            <area>5,125,200,10</area>
        </progressbar>
        
        <textarea name="progress_text" from="baseprogresstext">
            <area>5,125,200,10</area>
            <template>%PROGRESS_TEXT% %PROGRESS%</template>
        </textarea> 
    </window>
   
    <window name="notification-full">
        <area>10,10,1260,700</area>

        <animation trigger="AboutToShow">
            <section duration="250" centre="top">
                <verticalzoom start="0" end="100" easingcurve="OutQuad" />
            </section>
        </animation>
         
        <animation trigger="AboutToHide">
            <section duration="250" centre="top">
                <verticalzoom start="100" end="0" easingcurve="InQuad" />
            </section>
        </animation>

        <shape name="groupbox">
            <area>0,0,1260,700</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#FFFFFF" alpha="0" width="0" />
            <cornerradius>10</cornerradius>
        </shape>

        <imagetype name="image">
            <area>5,5,400,400</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>
        
        <group name="infotext-image" depends="image">
            <area>410,10,840,700</area>
            
            <textarea name="title" from="basetextarea">
                <area>0,0,100%,25</area>
                <font>baseextralarge</font>
            </textarea>

            <textarea name="extra" from="basetextarea">
                <area>5,40,100%,25</area>
                <template>%EXTRA| %%ORIGIN%</template>
            </textarea>

            <textarea name="origin" from="basetextarea" depends="!extra">
                <area>5,40,100%,25</area>
            </textarea>

            <textarea name="description-progress" from="basetextarea" depends="progress_text">
                <area>5,70,100%,25</area>
                <align>top</align>
                <template>%DESCRIPTION%</template>
            </textarea>
         
            <textarea name="description-noprogress" from="basetextarea" depends="!progress_text">
                <area>5,70,100%,100</area>
                <multiline>yes</multiline>
                <align>top</align>
                <template>%DESCRIPTION%</template>
            </textarea> 
             
            <progressbar name="progress" from="baseprogressbar" depends="progress_text">
                <area>45,125,200,10</area>
            </progressbar>
            
            <textarea name="progress_text" from="baseprogresstext">
                <area>45,125,200,10</area>
                <template>%PROGRESS_TEXT% %PROGRESS%</template>
            </textarea>
        </group>

        <group name="infotext-noimage" depends="!image">
            <area>10,10,1240,700</area>
            
            <textarea name="title" from="basetextarea">
                <area>0,0,100%,25</area>
                <font>baseextralarge</font>
            </textarea>

            <textarea name="extra" from="basetextarea">
                <area>5,40,100%,25</area>
                <template>%EXTRA| %%ORIGIN%</template>
            </textarea>

            <textarea name="origin" from="basetextarea" depends="!extra">
                <area>5,40,100%,25</area>
            </textarea>

            <textarea name="description-progress" from="basetextarea" depends="progress_text">
                <area>5,70,100%,25</area>
                <align>top</align>
                <template>%DESCRIPTION%</template>
            </textarea>
         
            <textarea name="description-noprogress" from="basetextarea" depends="!progress_text">
                <area>5,70,100%,100</area>
                <multiline>yes</multiline>
                <align>top</align>
                <template>%DESCRIPTION%</template>
            </textarea> 
             
            <progressbar name="progress" from="baseprogressbar" depends="progress_text">
                <area>45,125,200,10</area>
            </progressbar>
            
            <textarea name="progress_text" from="baseprogresstext">
                <area>45,125,200,10</area>
                <template>%PROGRESS_TEXT% %PROGRESS%</template>
            </textarea>
        </group>
    </window>
</mythuitheme>
